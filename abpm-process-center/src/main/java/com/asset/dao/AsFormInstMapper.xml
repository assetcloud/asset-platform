  <insert id="insert" parameterType="com.asset.entity.AsFormInst">
    insert into as_form_inst (id, form_model_id, proc_inst_id,
      execution_id, task_id, created_time,
      created_by, form_inst_json)
    values (#{id,jdbcType=VARCHAR}, #{formModelId,jdbcType=VARCHAR}, #{procInstId,jdbcType=VARCHAR},
      #{executionId,jdbcType=VARCHAR}, #{taskId,jdbcType=VARCHAR}, #{createdTime,jdbcType=TIMESTAMP},
      #{createdBy,jdbcType=VARCHAR}, #{formInstJson,jdbcType=LONGVARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.asset.entity.AsFormInst">
    insert into as_form_inst
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="formModelId != null">
        form_model_id,
      </if>
      <if test="procInstId != null">
        proc_inst_id,
      </if>
      <if test="executionId != null">
        execution_id,
      </if>
      <if test="taskId != null">
        task_id,
      </if>
      <if test="createdTime != null">
        created_time,
      </if>
      <if test="createdBy != null">
        created_by,
      </if>
      <if test="formInstJson != null">
        form_inst_json,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=VARCHAR},
      </if>
      <if test="formModelId != null">
        #{formModelId,jdbcType=VARCHAR},
      </if>
      <if test="procInstId != null">
        #{procInstId,jdbcType=VARCHAR},
      </if>
      <if test="executionId != null">
        #{executionId,jdbcType=VARCHAR},
      </if>
      <if test="taskId != null">
        #{taskId,jdbcType=VARCHAR},
      </if>
      <if test="createdTime != null">
        #{createdTime,jdbcType=TIMESTAMP},
      </if>
      <if test="createdBy != null">
        #{createdBy,jdbcType=VARCHAR},
      </if>
