  <select id="getProcInstIDs" parameterType="java.lang.String" resultType="java.lang.String">
    SELECT TASK_ID_
    FROM act_hi_actinst
    WHERE
      ASSIGNEE_ = #{userID,jdbcType = VARCHAR} and
      ACT_TYPE_ = 'userTask' and
      END_TIME_ = NULL
  </select>

  <select id="getFormInsts" parameterType="java.util.List" resultMap="BaseResultMap">
    SELECT
    id,
    form_model_id,
    proc_inst_id,
    execution_id,
    task_id,
    created_time,
    created_by,
    form_inst_json
    FROM
    as_form_inst
    WHERE
    proc_inst_id in
    <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
      #{item}
    </foreach>
  </select>
