<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asset.mapper.RoleMapper">

    <!-- 开启二级缓存 -->
<!--    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->
    <resultMap id="BaseResultMap" type="com.asset.bean.Role">
        <result column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_name_zh" property="roleNameZh"/>
        <result column="sort" property="sort"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>
    <resultMap id="UserRoleMap" type="com.asset.bean.UserRole">
        <result column="role_id" property="roleId"/>
    </resultMap>

    <select id="getRoles" resultMap="UserRoleMap">
        select role_id from as_user_role where uid = #{userId} and status = 1
    </select>
</mapper>
